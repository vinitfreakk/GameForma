<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="24dp">

    <ImageView
        android:id="@+id/map_img"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/map"
        android:scaleType="centerCrop"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/map_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/valofont"
            android:gravity="center"
            android:text="split"
            android:textColor="@color/white"
            android:textSize="50dp"
            app:layout_constraintBottom_toTopOf="@+id/map_info"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/map_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/valofont"
            android:gravity="center"
            android:padding="8dp"
            android:text="sjdfjhsadjkfhjkasdhfkjhasdkjfhjkasdhfjkhasjkdhfkjashdjkfhaskjdhfkjashkjfhasjkfhkasdhfkhasdkfhksahdfgsajhdfgasjhfgsjahdfgjhasgfusagdhjfgusidyfgasdhjfgasuidfjkashdfyuiosahdjkbfhkjasgdfuihasdjkfhasjkdhfuiasyduiofhaskjdfhas"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>